<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_Splash3">

   <ImageView
       android:id="@+id/imageView9"
       android:layout_width="match_parent"
       android:layout_height="500dp"
       android:src="@drawable/phot4"
       android:scaleType="centerCrop"/>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="460dp"
       android:layout_gravity="bottom"
       android:background="@drawable/background">


      <ImageView
          android:id="@+id/imageView10"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/phot2"
          android:layout_marginTop="42dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


      <TextView
          android:id="@+id/textview7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:textColor="#36596a"
          android:text="Welcome"
          android:textSize="28sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/imageView10"/>


      <TextView
          android:id="@+id/textview8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="Lorem ipsum dolor sit amet, consetetur"
          android:textSize="18sp"
          android:textColor="#675D5D"
          app:layout_constraintEnd_toEndOf="@+id/textview7"
          app:layout_constraintStart_toStartOf="@+id/textview7"
          app:layout_constraintTop_toBottomOf="@+id/textview7" />

       <TextView
           android:id="@+id/textview9"
           android:layout_width="222dp"
           android:layout_height="23dp"
           android:layout_marginTop="18dp"
           android:text="sadipscing elitr, sed diam"
           android:textColor="#675D5D"
           android:textSize="18sp"
           app:layout_constraintEnd_toEndOf="@+id/textview8"
           app:layout_constraintStart_toStartOf="@+id/textview8"
           app:layout_constraintTop_toBottomOf="@+id/textview8" />

      <Button
          android:id="@+id/button1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Start Now"
          android:textSize="14sp"
          android:background="@drawable/background_button"
          android:layout_marginHorizontal="24dp"
          android:layout_marginTop="38sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textview9" />

      <ImageView
          android:id="@+id/imageView11"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/unselected"
          android:layout_marginTop="40dp"
          app:layout_constraintTop_toBottomOf="@+id/button1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>


      <ImageView
          android:id="@+id/imageView12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/unselected"
         app:layout_constraintEnd_toStartOf="@id/imageView11"
          app:layout_constraintTop_toTopOf="@id/imageView11"
          app:layout_constraintBottom_toBottomOf="@id/imageView11"
          android:layout_marginEnd="10dp"/>


      <ImageView
          android:id="@+id/imageView13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/selected"
          android:layout_marginStart="10dp"
          app:layout_constraintStart_toEndOf="@+id/imageView11"
          app:layout_constraintTop_toTopOf="@+id/imageView11"
          app:layout_constraintBottom_toBottomOf="@id/imageView11"/>


   </androidx.constraintlayout.widget.ConstraintLayout>







</FrameLayout>